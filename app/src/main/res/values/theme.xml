<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="AppTheme.Swipe" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/anim_slide</item>
    </style>

    <style name="AppTheme.Popup" parent="ThemeOverlay.AppCompat.Light"/>
    
    <style name="AppTheme.Navigation" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/item_text</item>
    </style>

    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView"/>

    <style name="anim_slide" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_window_slide_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_window_slide_from_right</item>
    </style>

</resources>
