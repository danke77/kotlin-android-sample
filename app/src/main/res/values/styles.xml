<resources>

    <!-- widget -->
    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- textView -->
    <style name="singleLineTextView">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="commonSingleLineTextView" parent="@style/singleLineTextView">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/item_text</item>
    </style>

    <style name="descSingleLineTextView" parent="@style/singleLineTextView">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/item_text_desc</item>
    </style>

    <!-- line -->
    <style name="commonHorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_line_width</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="commonVerticalLine">
        <item name="android:layout_width">@dimen/common_line_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <!-- SwipeBackLayout -->
    <style name="SwipeBackLayout">
        <item name="edge_size">0dp</item>
    </style>

</resources>
